<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/inicio"
        android:layout_width="447dp"
        android:layout_height="77dp"
        android:background="@color/teal_700"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="-18dp"
        tools:layout_editor_absoluteY="-8dp" />

    <ImageButton
        android:id="@+id/ods1button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/_200px_objetivo_desenvolvimento_sustent_vel_1_pt"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="132dp" />

    <ImageButton
        android:id="@+id/ods2button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ods2_1__1_"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="132dp" />

    <ImageButton
        android:id="@+id/ods3button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ods3"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="320dp" />

    <ImageButton
        android:id="@+id/ods4button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ods4"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="320dp" />

    <ImageButton
        android:id="@+id/ods5button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ods5_1"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="502dp" />

    <ImageButton
        android:id="@+id/ods6button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ods6_1"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="502dp" />

    <TextView
        android:id="@+id/textinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ODS"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>